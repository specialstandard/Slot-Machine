<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="130dp"
        android:layout_height="183dp"
        android:src="@drawable/puppy_1"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="130dp"
        android:layout_height="183dp"
        android:src="@drawable/puppy_2"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spin and Win!"
        android:id="@+id/button1"
        android:layout_gravity="center_vertical"
        android:layout_above="@+id/layout_prize_3"
        android:layout_toEndOf="@+id/layout_prize_2"
        android:layout_toRightOf="@+id/layout_prize_2"
        android:layout_marginLeft="25dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="130dp"
        android:layout_height="183dp"
        android:src="@drawable/puppy_3"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$$$"
        android:id="@+id/textView_balance"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textColor="@color/colorGreen"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash: "
        android:id="@+id/textView_cash_label"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textView_balance"
        android:layout_toStartOf="@+id/textView_balance"
        android:textSize="30dp"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/textView_balance"
    android:id="@+id/layout_prize_1"
    android:paddingBottom="2dp"
    android:paddingLeft="4dp"
    android:paddingTop="4dp">
    <ImageView
        android:src="@drawable/puppy_1"
        android:layout_width="32dp"
        android:layout_height="45dp" />
    <ImageView
        android:src="@drawable/puppy_1"
        android:layout_width="32dp"
        android:layout_height="45dp" />
    <ImageView
        android:src="@drawable/puppy_1"
        android:layout_width="32dp"
        android:layout_height="45dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text=" = Win $15"
        android:textSize="15dp"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout_prize_1"
        android:id="@+id/layout_prize_2"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp">
        <ImageView
            android:src="@drawable/puppy_2"
            android:layout_width="32dp"
            android:layout_height="45dp" />
        <ImageView
            android:src="@drawable/puppy_2"
            android:layout_width="32dp"
            android:layout_height="45dp" />
        <ImageView
            android:src="@drawable/puppy_2"
            android:layout_width="32dp"
            android:layout_height="45dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=" = Win $25"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout_prize_2"
        android:id="@+id/layout_prize_3"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp">
        <ImageView
            android:src="@drawable/puppy_3"
            android:layout_width="32dp"
            android:layout_height="45dp" />
        <ImageView
            android:src="@drawable/puppy_3"
            android:layout_width="32dp"
            android:layout_height="45dp" />
        <ImageView
            android:src="@drawable/puppy_3"
            android:layout_width="32dp"
            android:layout_height="45dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=" = Win $35"
            android:textSize="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout_prize_3"
        android:id="@+id/layout_prize_4"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp">
        <ImageView
            android:src="@drawable/puppy_4"
            android:layout_width="32dp"
            android:layout_height="45dp" />
        <ImageView
            android:src="@drawable/puppy_4"
            android:layout_width="32dp"
            android:layout_height="45dp" />
        <ImageView
            android:src="@drawable/puppy_4"
            android:layout_width="32dp"
            android:layout_height="45dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=" = Win $45"
            android:textSize="15dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="Swipe puppy dogs to spin and win!"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
